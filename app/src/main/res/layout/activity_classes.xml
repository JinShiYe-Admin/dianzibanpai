<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pwdBgKey"
    tools:context=".classes.SetClassesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/selectId"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignTop="@+id/et_input_classes"
            android:width="220dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="20dp"
            android:textSize="20sp"
            android:text="选择班牌类型"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/select"
            android:background="@android:color/white"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/et_input_classes"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_toRightOf="@id/selectId"
            android:background="@android:color/white"
            android:hint="输入班牌编号"
            android:layout_marginLeft="1dp"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:textSize="20sp" />
    </RelativeLayout>

    <net.jiaobaowang.gonggaopai.classes.KeyboardViewClasses
        android:id="@+id/keyboard_view_classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />

</RelativeLayout>
